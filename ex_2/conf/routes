
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# User
POST /user/create                   controllers.api.UserController.createUser
GET /user/get/:id                   controllers.api.UserController.getUser(id)
PUT /user/update                    controllers.api.UserController.updateUser
DELETE /user/delete/:id             controllers.api.UserController.deleteUser(id)

# UserData
POST /user-data/create                   controllers.api.UserController.createUser
GET /user-data/get/:id                   controllers.api.UserController.getUser(id)
PUT /user-data/update                    controllers.api.UserController.updateUser
DELETE /user-data/delete/:id             controllers.api.UserController.deleteUser(id)

# Order
POST /order/create                   controllers.api.UserController.createUser
GET /order/get/:id                   controllers.api.UserController.getUser(id)
PUT /order/update                    controllers.api.UserController.updateUser
DELETE /order/delete/:id             controllers.api.UserController.deleteUser(id)